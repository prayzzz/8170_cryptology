<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="500.0"
          xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="presentation.controller.EncryptController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="150.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints/>
    </rowConstraints>
    <children>
        <Label text="encrypt" GridPane.rowIndex="0">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Label>
        <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0" promptText="plain-text" GridPane.rowIndex="1" wrapText="true">
            <font>
                <Font name="Consolas" size="12.0"/>
            </font>
        </TextArea>
        <Separator prefWidth="200.0" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER"/>
        <TextField fx:id="blockLengthTextField" promptText="block-length" GridPane.rowIndex="3"/>
        <CheckBox fx:id="removeWhitespacesCheckBox" mnemonicParsing="false" text="remove whitespaces?"
                  GridPane.halignment="RIGHT" GridPane.rowIndex="4"/>
        <GridPane GridPane.rowIndex="5">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <HBox nodeOrientation="RIGHT_TO_LEFT" prefWidth="200.0" spacing="5.0" GridPane.columnIndex="1">
                    <children>
                        <Button fx:id="saveButton" disable="true" minWidth="75.0" mnemonicParsing="false"
                                onAction="#Save" text="Save"/>
                        <Button fx:id="encryptButton" disable="true" minWidth="75.0" mnemonicParsing="false"
                                onAction="#Encrypt" text="Encrypt"/>
                    </children>
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                </HBox>
                <Button minWidth="75.0" mnemonicParsing="false" onAction="#OpenMainView" text="Back"/>
            </children>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</GridPane>
